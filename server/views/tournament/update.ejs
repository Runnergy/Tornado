<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="titleTextField">TITLE</label>
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Enter Title"
                    name="title" 
                    value="<%= tournament.title %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="typeTextField">Type</label>
                    <br>
                    <!--
                    <input type="text" class="form-control"
                    id="typeTextField"
                    placeholder="Enter Type"
                    name="type"
                    value="<%= tournament.type %>" 
                    required>-->

                    <!-- make the radio button checked according to tournament type -->
                    <% if(tournament.type == "4 bouts") { %>
                        <input type="radio" id="fourBouts" name="type" value="4 bouts" checked>
                        <label for="lblFourBouts">4 Bouts</label><br>
                        <input type="radio" id="sixteenBouts" name="type" value="16 Bouts">
                        <label for="lblSixteenBouts">16 Bouts</label><br>
                    <% } else {%>
                        <input type="radio" id="fourBouts" name="type" value="4 bouts">
                        <label for="lblFourBouts">4 Bouts</label><br>
                        <input type="radio" id="sixteenBouts" name="type" value="16 Bouts" checked>
                        <label for="lblSixteenBouts">16 Bouts</label><br>
                    <% } %>
                </div>
                
                <div class="form-group">
                    <label for="participantTextField">Participants</label>
                    <textarea id="participantsTextArea"
                    placeholder="Enter Participants"
                    name="participants" 
                    required rows="4" cols="50"><% for(let count = 0; count < tournament.participants.length; count++) { %><%= tournament.participants[count] %><% } %></textarea>
                </div>
                


                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/tournament" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>


            </form>
        </div>

    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>
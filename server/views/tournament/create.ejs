<div class="row">
        <div class="offset-md-3 col-md-6">
            <form class="form" method="POST">

                <div class="form-group">
                    <label for="titleTextField">TITLE</label>
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Enter TITLE"
                    name="title" required>
                </div>

                <input type="radio" id="fourBouts" name="type" value="4">
                <label for="lblFourBouts">4 Bouts</label><br>
                <input type="radio" id="sixteenBouts" name="type" value="16">
                <label for="lblSixteenBouts">8 Bouts</label><br>

                <div class="form-group">
                <label for="participantTextField">Participants</label>
                <textarea class="form-control" id="participants" name="participants" placeholder="Enter Participants" rows="5"></textarea>
                </div>
                
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Create</button>
                
                    <a href="/tournament" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
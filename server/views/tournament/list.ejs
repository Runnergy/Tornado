<div class="container vh-100 pt-5 text-light">
    <a href="/tournament/create" class="btn btn-primary" role="button">
    <i class="fas fa-plus-circle"></i> Create tournament</a><br>

    <table class="table table-bordered table-striped table-hover bg-light">
    <!-- Header Row-->
        <tr class="d-flex">
            <th class="text-center col-3">Title</th>
            <th class="text-center col-2">Type</th>
            <th class="text-center col-4">Participants</th>
            <th class="text-center col-1"></th>
            <th class="text-center col-1"></th>
            <th class="text-center col-1"></th>
        </tr>

        <!-- Repeatable Template Row -->

        <% for(let i = 0; i < TournamentList.length; i++) { %>
            <tr class="d-flex">
                <td class="text-center col-3"><%= TournamentList[i].title %></td>
                <td class="text-center col-2"><%= TournamentList[i].round %> rounds
                    <br>
                    <%= TournamentList[i].type %> bouts</td>
                <td class="text-center col-4">
                
                    <!-- display the objects in the participants array -->
                    <% for(let j = 0; j < TournamentList[i].participants.length; j++) { %>
                    <%=TournamentList[i].participants[j]%><% if(j != TournamentList[i].participants.length - 1) {%>,<% } %>
                    <% } %>
                </td>
                <td class="text-center col-1">
                    <a href="/tournament/brackets/<%= TournamentList[i]._id %>" class="btn btn-success btn-sm">
                    <i class="fas fa-eye"></i></a>
                </td>
                <td class="text-center col-1">
                    <a href="/tournament/update/<%= TournamentList[i]._id %>" class="btn btn-primary btn-sm">
                    <i class="fas fa-pencil-alt"></i></a>
                </td>
                <td class="text-center col-1">
                    <a href="/tournament/delete/<%= TournamentList[i]._id %>" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i></a>
                </td>
                
            </tr>
        <% } %>
    </table>
</div>